# Discord application credentials
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_application_client_id
# Optional: register commands faster by scoping to specific guild IDs
GUILD_ID=
GUILD_IDS=

# Recording output location (relative or absolute path)
AUDIO_DIR=./recordings

# Automatic cleanup
RETENTION_DAYS=30

# Encoding configuration
OUTPUT_FORMAT=mp3
BITRATE=128

# Alignment behaviour
ALIGNMENT_MODE=pad
PAD_AFTER_OPTOUT=false

# Logging verbosity (error|warn|info|debug)
LOG_LEVEL=info