# Discord application/bot credentials
DISCORD_TOKEN=YOUR_BOT_TOKEN
CLIENT_ID=YOUR_APP_CLIENT_ID
# Optional for faster per-guild command registration during development
GUILD_ID=YOUR_GUILD_ID

# Recording/config
AUDIO_DIR=./recordings
RETENTION_DAYS=30
OUTPUT_FORMAT=mp3
BITRATE=128
ALIGNMENT_MODE=pad        # pad | truncate
PAD_AFTER_OPTOUT=false    # when a user opts out mid-session, keep padding? default false
LOG_LEVEL=info
